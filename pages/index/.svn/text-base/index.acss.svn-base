page{
	background: #F6F6F6;
}
.clear{
	clear: both;
}
.home{
	border: 1px solid rgba(0,0,0,0);
	font-size: 20rpx;
	color: #f00;
	padding-bottom: 40rpx;
}
.homeCard{
	margin-top: 32rpx;
	background: #fff;
	padding: 32rpx;
}
.listPic{
	width: 240rpx;
	height: 180rpx;
	border-radius: 10rpx;
	overflow: hidden;
	margin-right: 32rpx;
	float: left;
}
.listPic image{
	width: 100%;
	height: 100%;
}
.cardTop{
	padding-bottom: 32rpx;
	border-bottom: 1px solid rgba(25,31,37,0.08);
	margin-bottom: 26rpx;
}
.listText{
	float: left;
	width: 400rpx;
}
.listTitle{
	color: #191F25;
	font-size: 34rpx;
	font-weight: 500;
	line-height: 48rpx;
}
.smallTitle{
	color:rgba(25,31,37,0.72);
	font-size: 28rpx;
	font-weight: 400;
	line-height: 40rpx;
	margin: 4rpx 0 22rpx 0;
}
.cardlist{
	font-size: 20rpx;
	font-weight:500;
	color:rgba(25,31,37,0.4);
	padding: 8rpx;
	border-radius:4rpx;
	border:1px solid rgba(25,31,37,0.4);
	margin-right: 12rpx;
	float: left;
	margin-bottom: 10rpx;
}
.scalePic{
	float: left;
	width: 518rpx;
	height: 70rpx;
	background: url('../../image/scale.png') no-repeat;
	background-size: 100% 100%;
}
.orderBtn{
	float: right;
	width: 120rpx;
	height: 64rpx;
	border-radius: 6rpx;
	background: #1aabf8;
	color: #fff;
	font-size: 28rpx;
	font-weight: 500;
	text-align: center;
	line-height: 64rpx;
}
.yetCards{
	margin-top: 42rpx;
	margin-left: 14rpx;
	
}
.yetOrder{
	width: 24.5rpx;
	height: 22rpx;
	background:rgba(25,31,37,0.08);
	float: left;
}
.noYet{
	width: 24.5rpx;
	height: 22rpx;
	background: rgba(0,0,0,0);
	float: left;
}